<nav-burger classes="nav--burger">
  <% main_nav.each_with_index do |chapter, index| %>
    <nav-link 
      href="<%= chapter[:url] %>" 
      :current-page="<%= active_nav_item? chapter[:url] %>" 
      subtitle="Chapter <%= index + 1 %>"
      title="<%= chapter[:title] %>">
      <span class="nav__button flex flex-center"><%= index + 1 %></span>
    </nav-link>
  <% end %>
</nav-burger>
