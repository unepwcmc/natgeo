<div class="bg-green-light">
  <div class="pagination container flex flex-column flex-center">
    <span><%= @chapter_number %> / 10</span>
    <% if @next_chapter_title %>
      <%= link_to @next_chapter_link, title: @next_chapter_title, class: 'pagination__next flex flex-v-center' do %>
        <span class="pagination__text"><%= @chapter_number.to_i + 1 %>. <%= @next_chapter_title %></span>
        <i class="pagination__icon icon--arrow-right"></i>
      <% end %>
    <% end %>
  </div>
</div>