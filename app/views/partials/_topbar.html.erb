<div class="topbar--primary flex flex-h-between gutters">
  <%= link_to root_path, title: site_title, class: 'topbar__site-link flex flex-v-center' do %>
    <%= image_tag 'logos/logo-protected-planet.svg', alt: site_title + ' logo', class: "topbar__logo" %>
    <span class="topbar__logo-text">Digital Report</span>
  <% end %>
  
  <div class="flex flex-v-center">
    <%= link_to '', title: 'Download the full report PDF', target: '_blank', class: 'button--download' do %>
      <i class="icon--download"></i>
      <span class="button--download__text">Full report PDF download</span>
    <% end %>

    <%= render 'partials/social-sharing' %>
    <%= render 'partials/nav' %>
  </div>
</div>