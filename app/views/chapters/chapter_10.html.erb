<section class="section-padding">
  <%= render partial: 'partials/component-title', locals: { title: @data['accordion_title'], intro: @data['accordion_intro'] } %>

  <div class="container--medium">
    <accordion>
      <% @data['accordion'].each_with_index do |item, index| %>
        <accordion-item id="accordion-item-<%= index %>" title="<%= item['title'] %>">
          <% item['content'].each do |content| %>
            <p class="accordion-item__content-title"><%= content['title'] %></p>
            <p><%= content['text'] %></p>
          <% end %>
        </accordion-item>
      <% end %>
    </accordion>
  </div>
</section>

<section class="section-padding content--next-steps">
  <div class="container">
    <h2 class="content__title"><%= @data['next_steps_title'] %></h2>
    <p class="content__text"><%= @data['next_steps_text'] %></p>
  </div>
</section>