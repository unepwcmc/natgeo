<section class="section-padding">
  <div class="container--small">
    <% @data['content_1'].each do |p| %>
      <p><%= p %></p>
    <% end %>
  </div>
</section>

<map-statistics 
  id="<%= @map_1[:id] %>"
  title="<%= @data['map_1_title'] %>" 
  description="<%= @data['map_1_description'] %>" 
  :layers="<%= @map_1[:layers].to_json %>" 
  source="<%= @data['map_1_source'] %>">
</map-statistics>

<%= render partial: '/partials/cta', locals: { title: @data['cta_title_1'], text: @data['cta_text_1'], url: @data['cta_url_1'] } %>

<section class="section-padding">
  
  <%= render partial: 'partials/component-title', locals: { title: @data['line_chart_title'] } %>

  <div class="container--medium">
    <chart-line 
      :lines="<%= @line_chart[:lines].to_json %>" 
      :targets="<%= @line_chart[:targets].to_json %>"
      :legend="<%= @line_chart[:legend].to_json %>"
      :axis="<%= @line_chart[:axis].to_json %>">
    </chart-line>

    <span class="smallprint"><%= @data['line_chart_smallprint'] %></span>
  </div>
</section>

<section class="section-padding">
  <div class="container--small">
    <% @data['content_2'].each do |p| %>
      <p><%= p %></p>
    <% end %>
  </div>
</section>

<%= render partial: '/partials/cta', locals: { title: @data['cta_title_2'], text: @data['cta_text_2'], url: @data['cta_url_2'] } %>