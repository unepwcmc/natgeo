<section class="section-padding">
  <div class="container--small">
    <%= @data['content_1'].html_safe %>
  </div>
</section>

<%= render partial: '/partials/cta', locals: { title: @data['cta_title_1'], text: @data['cta_text_1'], url: @data['cta_url_1'] } %>

<section class="section-padding">
  <div class="container--small">
    <p><%= @data['content_2'] %></p>
  </div>
</section>

<section class="section-padding">

  <%= render partial: 'partials/component-title', locals: { title: @data['column_chart_title'], intro: @data['column_chart_intro'] } %>

  <div class="container--medium">
    <chart-column :columns="<%= @column_chart %>"></chart-column>
  </div>
</section>

<section class="section-padding">
  <div class="container--small">
    <p><%= @data['content_3'] %></p>
  </div>
</section>

<section class="section-padding">

  <%= render partial: 'partials/component-title', locals: { title: @data['stacked_row_chart_title'], intro: @data['stacked_row_chart_intro'] } %>

  <div class="container--medium section-padding--top">
    <chart-legend :rows="<%= @stacked_row_charts[:legend].to_json %>" theme="<%= @stacked_row_charts[:theme] %>"></chart-legend>

    <% @stacked_row_charts[:charts].each do |chart| %>
      <chart-row-stacked
        title="<%= chart[:chart_title] %>"
        :rows="<%= chart[:rows].to_json %>"
        theme="<%= @stacked_row_charts[:theme] %>">
      </chart-row-stacked>
    <% end %>

  <chart-legend :rows="<%= @stacked_row_charts[:legend].to_json %>" theme="<%= @stacked_row_charts[:theme] %>"></chart-legend>
  </div>
</section>

